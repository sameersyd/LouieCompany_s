<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/editProfile_rela"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/editProfile_closeImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/editProfile_mainTxt"
                android:layout_alignBottom="@+id/editProfile_mainTxt"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/x_white" />

            <TextView
                android:id="@+id/editProfile_mainTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="Edit Profile"
                android:textSize="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:id="@+id/editProfile_nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#a7a7a8"
                android:text="Name"
                android:layout_below="@id/editProfile_mainTxt"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editProfile_nameEdit"
                android:layout_below="@id/editProfile_nameTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="16dp"
                android:textCursorDrawable="@null"
                android:inputType="textCapWords"
                android:textColor="#ffffff"
                android:background="@drawable/custom_edittext"/>

            <TextView
                android:id="@+id/editProfile_phoneTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#a7a7a8"
                android:layout_below="@id/editProfile_nameEdit"
                android:text="Phone"
                android:textSize="16dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/editProfile_phoneEdit"
                android:layout_below="@id/editProfile_phoneTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="16dp"
                android:textCursorDrawable="@null"
                android:textColor="#ffffff"
                android:background="@drawable/custom_edittext"/>

            <TextView
                android:id="@+id/editProfile_profileImageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#a7a7a8"
                android:layout_below="@id/editProfile_phoneEdit"
                android:text="Profile Image"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/editProfile_uploadImageTxt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="Upload an image"
                android:textColor="#505051"
                android:gravity="center"
                android:background="@drawable/custom_edittext"
                android:layout_below="@id/editProfile_profileImageTxt"/>

            <ImageView
                android:id="@+id/editProfile_uploadImg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/editProfile_profileImageTxt"/>

            <ImageView
                android:id="@+id/editProfile_floatingNext"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/floating_red"
                android:layout_below="@id/editProfile_uploadImg"/>

        </RelativeLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>