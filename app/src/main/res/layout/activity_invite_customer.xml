<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteCustomerActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/view_gradient"/>

    <ImageView
        android:id="@+id/inviteCustomer_closeImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/x_white"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/inviteCustomer_mainTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="Invite Customer"
        android:textSize="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/inviteCustomer_emailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#b9b9b9"
        android:text="Email"
        android:textSize="16dp"
        android:layout_below="@id/inviteCustomer_mainTxt"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/inviteCustomer_emailEdit"
        android:layout_below="@id/inviteCustomer_emailTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:backgroundTint="#b9b9b9"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/inviteCustomer_inviteBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Invite Customer"
        android:backgroundTint="#878183"
        android:layout_margin="35dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"/>

</RelativeLayout>