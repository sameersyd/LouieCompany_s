<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/referral_model"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/custMyReferrals_nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Sameer Nawaz"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/custMyReferrals_statusTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/accountsetup_selected"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="20dp"
            android:paddingBottom="7dp"
            android:text="Pending"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:textColor="#FFFFFF"
            android:textSize="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/custMyReferrals_phoneTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/custMyReferrals_nameTxt"
            android:text="+91 978-923-8950"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/custMyReferrals_emailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="sameer@gmail.com"
            android:layout_below="@id/custMyReferrals_phoneTxt"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>

        <RelativeLayout
            android:id="@+id/custMyReferrals_rela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custMyReferrals_emailTxt">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/custMyReferrals_statusUpdatedByImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="#543423"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/custMyReferrals_statusUpdatedByPlainTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Status updated by "
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/custMyReferrals_statusUpdatedByImg"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/custMyReferrals_updatedByTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Timothy"
                android:textStyle="bold"
                android:layout_toRightOf="@id/custMyReferrals_statusUpdatedByPlainTxt"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="25dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>